<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        useCompatPadding = "true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutCardViewHistoryLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewDeviceNameHistoryLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Device Name"
                android:textSize="22sp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/open_sans_bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expandableLayoutCardViewHistoryLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textViewDeviceNameHistoryLogin">

                <TextView
                    android:id="@+id/textViewAccountHistoryLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:paddingLeft="20dp"
                    android:text="account"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/textViewIpHistoryLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textViewAccountHistoryLogin"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:paddingLeft="20dp"
                    android:text="Ip"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/textViewLoginTimeHistoryLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textViewIpHistoryLogin"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Login Time"
                    android:textSize="18sp"
                    android:paddingLeft="20dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>