<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChildFragment.fragment_child_limit_setting">

    <Spinner
        android:id="@+id/spinnerLimitSetting"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </Spinner>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLimitSoilMoisture1"
        android:layout_width="370dp"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerLimitSetting"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerLimitSetting"
        android:layout_marginTop="20dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textViewLblSoilMoistureSensor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Soil Moisture 1"
                android:textSize="@dimen/text_size_18sp"
                />
            <TextView
                android:id="@+id/textViewLimitMin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textViewLblSoilMoistureSensor1"
                app:layout_constraintLeft_toLeftOf="@+id/textViewLblSoilMoistureSensor1"
                android:layout_marginTop="5dp"
                android:text="Min:"
                android:fontFamily="@font/opensans_regular"/>
            <EditText
                android:id="@+id/editTextMin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_18sp"

                app:layout_constraintLeft_toRightOf="@+id/textViewLimitMin1"
                app:layout_constraintTop_toBottomOf="@+id/textViewLblSoilMoistureSensor1"


                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>