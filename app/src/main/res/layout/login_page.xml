<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="6"
    android:background="@color/white_60"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_pages.activity_login">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="148dp"
            android:layout_height="127dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/logo_iuh" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:hint="Tài Khoản"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="-16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/account"
                    android:outlineAmbientShadowColor="@color/blue_30"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/round_edt"
                    android:textSize="20sp"
                    app:counterMaxLength="20"
                    android:maxLength="20"
                    android:paddingTop="15dp"
                    android:drawablePadding="10dp"
                    tools:layout_editor_absoluteX="23dp"
                    tools:layout_editor_absoluteY="258dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:drawableStart="@drawable/ic_login_account"
                    />



            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@null"
                android:hint="Mật khẩu"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout1"
                app:passwordToggleEnabled="true"
                tools:layout_editor_absoluteX="20dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeWidth="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passWord"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/round_edt"
                    android:drawableStart="@drawable/ic_login_password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:textSize="20sp"
                    app:counterMaxLength="20"
                    android:maxLength="20"
                    android:drawablePadding="10dp"
                    android:paddingTop="15dp"
                    tools:layout_editor_absoluteX="23dp"
                    tools:layout_editor_absoluteY="258dp"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/Login"
                android:outlineAmbientShadowColor="@color/white"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginStart="104dp"
                android:layout_marginTop="112dp"
                android:background="@drawable/round_edt"
                android:text="Đăng Nhập"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textInputLayout" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</LinearLayout>